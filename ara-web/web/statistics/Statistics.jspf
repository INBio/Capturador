<div xmlns:f="http://java.sun.com/jsf/core" xmlns:h="http://java.sun.com/jsf/html" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:webuijsf="http://www.sun.com/webui/webuijsf">
    <table cellspacing="0px" style="width:100%;height:260px;">
        <f:subview id="SystemStatistics">
            <tbody>
                <tr>
                    <td style="padding-left:5%;padding-right:5%">
                        <h:panelGrid cellspacing="1" columns="1" id="gridpTableButtons1" styleClass="My_table_statistics" width="400">
                            <h:panelGrid columns="1" id="gridptitle1" styleClass="My_table_statistics_top" width="400">
                                <h:outputText id="specimenTitle" value="#{resources.specimenByCollection}"/>
                            </h:panelGrid>
                            <h:panelGrid cellspacing="1" columns="1" id="gridpTable1" width="400">
                                <h:dataTable cellspacing="0" columnClasses="list-columns" headerClass="list-header" id="dataTableSpecimens"
                                    rowClasses="list-row-even,list-row-odd"
                                    style="border-top: solid rgb(214, 218, 221) 2px; border-bottom: solid rgb(214, 218, 221) 2px; border-left: solid rgb(214, 218, 221) 2px; "
                                    value="#{statistics$StatisticsSessionBean.specimenList}" var="currentRow" width="400">
                                    <h:column>
                                        <h:outputText value="#{currentRow['name']}"/>
                                    </h:column>
                                    <h:column>
                                        <h:outputText value="#{currentRow['value']}"/>
                                    </h:column>
                                </h:dataTable>
                            </h:panelGrid>
                        </h:panelGrid>
                    </td>
                    <td style="padding-left:5%;padding-right:5%">
                        <h:panelGrid cellspacing="1" columns="1" id="gridpTableButtons2" styleClass="My_table_statistics" width="400">
                            <h:panelGrid columns="1" id="gridptitle2" styleClass="My_table_statistics_top" width="400">
                                <h:outputText id="speciesTitle" value="#{resources.speciesByCollection}"/>
                            </h:panelGrid>
                            <h:panelGrid cellspacing="1" columns="1" id="gridpTable2" width="400">
                                <h:dataTable cellspacing="0" columnClasses="list-columns" headerClass="list-header" id="dataTableSpecies"
                                    rowClasses="list-row-even,list-row-odd"
                                    style="border-top: solid rgb(214, 218, 221) 2px; border-bottom: solid rgb(214, 218, 221) 2px; border-left: solid rgb(214, 218, 221) 2px; "
                                    value="#{statistics$StatisticsSessionBean.speciesList}" var="currentRow" width="400">
                                    <h:column>
                                        <h:outputText value="#{currentRow['name']}"/>
                                    </h:column>
                                    <h:column>
                                        <h:outputText value="#{currentRow['value']}"/>
                                    </h:column>
                                </h:dataTable>
                            </h:panelGrid>
                        </h:panelGrid>
                    </td>
                </tr>
            </tbody>
        </f:subview>
    </table>
</div>
